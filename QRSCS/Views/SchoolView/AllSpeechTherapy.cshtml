@model List<QRSCS.Models.SpeechTherapyAssessmentModel>

@{
    ViewBag.Title = "All Speech Therapy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 100px;
  height:100px;
}
</style>
<div class="container-fluid">
    <div class="db-breadcrumb">
        <h4 class="breadcrumb-title">Users</h4>
        <ul class="db-breadcrumb-list">
            <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
            <li>View all Users</li>
        </ul>
    </div>

    <div class="row">
        <!-- Your Profile Views Chart -->
        <div class="col-lg-12 m-b30">
            <div class="widget-box">
                <div class="wc-title">
                    <h4>List Views Users</h4>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Speech Therapy Assessment ID</th>
                                        <th>GR_NO</th>
                                        <th>Date</th>
                                        <th>Image</th>     
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.Speech_Therapy_Assessment_ID</td>
                                        <td>@item.GR_NO</td>
                                        <td>@item.Date_of_Assessment.ToShortDateString()</td>
                                        <td><img src="@Url.Content(item.Speech_Test_Image)"  class="center" /></td>
                                        

                                        @*<td>@Html.ActionLink("Update", "UpdateUser", "Admin", new { User_ID = @item.User_ID }, new { @class = "btn " })</td>*@

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Your Profile Views Chart END-->
                </div>
            </div>
        </div>
    </div>
</div>
<div class="ttr-overlay"></div>
